<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chopboard"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="5dp"
        android:layout_centerInParent="true">







        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43f7f6f5"
                android:layout_margin="10dp"
                />



        </LinearLayout>





    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/layout_id">







        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:tag="0"
                android:id="@+id/iv0"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:tag="1"
                android:id="@+id/iv1"
                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:tag="2"
                android:layout_margin="10dp"
                android:id="@+id/iv2"

                />



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:layout_margin="10dp"
                android:tag="3"
                android:id="@+id/iv3"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:layout_margin="10dp"
                android:tag="4"
                android:id="@+id/iv4"

                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:layout_margin="10dp"
                android:tag="5"
                android:id="@+id/iv5"


                />



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:tag="6"
                android:id="@+id/iv6"

                android:layout_margin="10dp"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:layout_margin="10dp"
                android:tag="7"
                android:id="@+id/iv7"


                />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClick"
                android:layout_margin="10dp"
                android:tag="8"
                android:id="@+id/iv8"


                />



        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_weight="1" />

        <TextView
                android:textAlignment="center"
                android:textDirection="rtl"
                android:text="@string/playFirst"
            android:textColor="#eef7eee0"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
            android:layout_marginTop="14dp"
                android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/YourMohr"
            android:layout_weight="1" />

        <TextView
            android:textAlignment="center"
            android:textDirection="rtl"
            android:text="@string/YourMohre"
            android:textColor="#eef7eee0"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winnerTV"
        android:textColor="#eef7eee0"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button"
        android:textSize="18sp"
        android:layout_marginBottom="-45dp"
        android:layout_alignBottom="@id/layout_id"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>